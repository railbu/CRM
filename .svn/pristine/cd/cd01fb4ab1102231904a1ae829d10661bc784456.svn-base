<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ page import="java.util.*" %>
<%@ page import="java.text.*" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
		<title>Insert title here</title>
		<%@include file="/common/header.jsp"%>
		<%@include file="/common/meta.jsp"%>
</head>

<body>
		<%@include file="topCNM.jsp"%>
		<%@include file="naviCN.jsp"%>
		
		<script src="${ctx}/resources/js/typeahead-bs2.min.js"></script>
		<script src="${ctx}/resources/js/ace-elements.min.js"></script>
		<script src="${ctx}/resources/js/ace.min.js"></script>
	
		<div class="mainc">
			<div class="navbar1">
				<span class="maincLabel">
					<i class="glyphicon glyphicon-export"></i>
					销售机会管理
					<a href="${ctx}/2SaleManager/opportunity_add.action" class="aactive">新建销售机会</a>
					<a href="${ctx}/2SaleManager/opportunity_list.action">销售机会管理</a>
				</span>
			</div>
			
			
			<form action="${ctx}/2SaleManager/opportunity_save.action" class="form-horizontal" enctype="multipart/form-data" method="post">
				<div class="table1">
					<table class="table text-center">
						<tr>
							<td>
								<label class="control-label">机会来源</label>
							</td>
							<td colspan="2">
    							<input type="text" name="source" class="form-control">
							</td>
						</tr>
						<tr>
							<td>
								<label class="control-label">客户名称</label>
							</td>
							<td>
    							<input type="text" name="customerName" class="form-control" placeholder="必填">
							</td>
							<td>
								<label class="control-label">成功几率</label>
							</td>

							<td style="width:400px;text-align:left">
									<input id="successRate" type="text" name="successRate" readonly
									    class="hideinput"/>
									<div id="v-slider" style="width:250px;float:right;line-height:0;margin-top:14px"></div>

							</td>
							
						</tr>
						<tr>
							<td>
								<label class="control-label">概要</label>
							</td>
							<td colspan="2">
    								<input type="text" name="summary" class="form-control" placeholder="必填">
    						</td>
    						<td>
    						</td>
						</tr>
						<tr>
							<td>
								<label class="control-label">联系人</label>
							</td>
							<td>
    								<input type="text" name="contactName" class="form-control">
							</td>
							<td>
								<label class="control-label">联系人电话</label>
							</td>
							<td>
    								<input type="text" name="contactPhone" class="form-control">
							</td>
						</tr>
						<tr>
							<td>
								<label class="control-label">机会描述</label>
							</td>
							<td colspan="2">
    								<textarea class="form-control" name="description" rows="3" wrap="virtual"></textarea>
    						</td>
						</tr>
						<tr>
							<td>
								<label class="control-label">创建人</label>
							</td>
							<td>
								<s:select list="users" cssClass="form-control" name="userId" listValue="name" listKey="id"></s:select>
							</td>
							<td>
								<label class="control-label">创建时间</label>
							</td>
							<td>
								<% String datetime=new SimpleDateFormat("yyyy-MM-dd HH:mm:ss").format(Calendar.getInstance().getTime()); //获取系统时间 %>
    							<input type="text" name="createTime" class="form-control" value="<%=datetime%>" readonly>
							</td>
						</tr>
					</table>
				</div>
				<div class="table1">
					<table class="table text-center">
						<tr>
							<td>
								<label class="control-label">指派给</label>
							</td>
							<td>
								<select class="form-control" disabled>
    								<option value="" disabled selected>请选择...</option>
    							</select>
							</td>
							<td>
								<label class="control-label">指派时间</label>
							</td>
							<td>
    							<input type="text" name="assignTime" class="form-control" disabled>
							</td>
						</tr>
					</table>					
				</div>
				
				<div class="col-sm-offset-5 col-sm-8">
					<s:submit cssClass="btn btn-primary" value="保存"/>
					<s:reset cssClass="btn btn-default" value="重置"/>
				</div>
			</form>
		</div>
	
</body>
</html>